<div class="navbar navbar-expand-md navbar-dark fixed-top bg-dark shadow-sm">
    <div class="container">
        <button class="navbar-brand btn" type="button" data-toggle="tooltip" title="Santexnik">
            <h4>Santexnik</h4>
        </button>
        <button class="navbar-toggler collapsed" type="button" data-toggle="collapse"
                data-target="#navMenu" aria-controls="navMenu" aria-expanded="false"
                aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div id="navMenu" class="collapse navbar-collapse">
            <ul class="nav navbar-nav mr-auto">
                <li class="nav-item">
                    <a href="@Url.Action("Index", "Home")" class="nav-link" data-toggle="tooltip" title="Головна">
                        <i class="fa fa-home" aria-hidden="true"></i>
                        <span class="sr-only">(current)</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link" data-toggle="tooltip" title="Послуги">Послуги<span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link" data-toggle="tooltip" title="Контакти">Контакти<span class="sr-only">(current)</span></a>
                </li>
            </ul>

            <form id="form1" action="" class="form-inline">
                <div class="form-group m-1">
                    <label for="Email" class="sr-only">Логін</label>
                    <input type="text" id="Email" class="form-control" placeholder="Email" data-toggle="tooltip" title="Email">
                </div>
                <div class="form-group m-1">
                    <label for="Pass" class="sr-only">Пароль</label>
                    <input type="password" id="Pass" class="form-control" placeholder="password" data-toggle="tooltip" title="пароль">
                </div>
                <button type="button" class="btn btn-light" onclick="signIn()" id="signin" title="увійти">Увійти</button>
            </form>
                <button type="submit" class="btn btn-light ml-1" title="Реєстрація">@Html.ActionLink("Реєстрація", "RegArea")</button>
        </div>
    </div>
</div>
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script>
    function signIn() {
        if ($('#Email').val() && $('#Pass').val()) {
            var res = $.get("/Home/SignIn", {
                "Email": $('#Email').val(),
                "Password": $('#Pass').val()
            });

            if (res == "null")
                window.location.reload();
            else
                window.location.href = "/Home/Kabinet?Email=" + document.getElementById("Email").value + "&Password=" + document.getElementById("Pass").value;
        }
        else {
            if ($("#Email").val() === "")
                document.getElementById("Email").style.border = "red solid 2px";
            if ($("#Pass").val() === "")
                document.getElementById("Pass").style.border = "red solid 2px";
        }
    }
</script>